{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    // 声明文件目录
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  // 设置需要编译的范围, 也就是.ts文件所在的地方
  "include": [
    "src"
  ]
}
